package{	import flash.display.*;	import flash.text.*;	import inky.framework.data.*;	import inky.framework.forms.*;	import inky.framework.validation.*;	public class MyForm extends Form	{		private var _blocker:Sprite;		public function MyForm()		{			this.debug = true;			this.action = '../form-action.php';			this.addValidator(new EqualityValidator(this.user_tos, 'selected', true), this.invalidTOSIndicator);			this.addValidator(new EmailValidator(this.user_email, 'text'), this.invalidEmailIndicator);			this.addValidator(new DateValidator(this.user_birthYear, 'selectedLabel', this.user_birthMonth, ['selectedItem', 'data'], this.user_birthDay, 'selectedLabel', false), this.invalidBirthdayIndicator);			this.restore();						this.addEventListener(FormEvent.SUBMIT, this._block);			this.addEventListener(FormEvent.ERROR, this._unblock);			this.addEventListener(FormEvent.SUBMIT_CANCELLED, this._unblock);			this.addEventListener(FormEvent.VALIDATION_ERROR, this._unblock);		}		private function _block(e:FormEvent):void		{			if (!this._blocker)			{				var spr:Sprite = new Sprite();				var g:Graphics = spr.graphics;				g.beginFill(0x000000, 0.5);				g.drawRect(0, 0, this.stage.stageWidth, this.stage.stageHeight);				g.endFill();				this.stage.addChild(spr);				this._blocker = spr;			}		}		private function _unblock(e:FormEvent):void		{			if (this._blocker)			{				this.stage.removeChild(this._blocker);				this._blocker = null;			}		}	}}