package inky.components.scrollBar
{
	/**
	 *
	 * Defines the values for the <code>direction</code> property of a
	 * ScrollBar. 
	 *
	 * @see http://exanimo.com/actionscript/scrollpane/	 	
	 *	 	 	
	 * @langversion ActionScript 3
	 * @playerversion Flash 9.0.0
	 *
	 * @author    Matthew Tretter (matthew@exanimo.com)
	 * @since     2007.11.12
	 *	
	 */
	public class ScrollBarDirection
	{
		/**
		 *		
         * Indicates that the ScrollBar component instance is used for
         * vertical scrolling.
         *          
		 */
		public static const VERTICAL:String = "vertical";


		/**
		 *		
         * Indicates that the ScrollBar component instance is used for
         * horizontal scrolling.
         *
		 */
		public static const HORIZONTAL:String = "horizontal";
	}
}
